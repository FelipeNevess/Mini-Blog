<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="bg-dark text-white text-center mb-4 p-4">
      <%= link_to root_path, class: 'text-white' do %>
        <h1>Home Blog</h1>
      <% end %>
    </div>

    <div class='container'>
      <% flash.each do |type, message| %>
        <div
          class="alert alert-<%= type== 'alert' ? 'danger' : 'success'  %> alert-dismissible fade show"
          role="alert"
        >
          <stronge><%= message %></stronge>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <footer class='bg-dark text-white text-center mt-5 p-4'>
      Copyright &#169 <%= Date.current.year %>
    </footer>
  </body>
</html>
